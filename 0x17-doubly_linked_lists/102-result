#include <stdio.h>
#include <stdlib.h>

int is_palindrome(int n) {
  char str[10];
  sprintf(str, "%d", n);
  int len = strlen(str);
  for (int i = 0; i < len / 2; i++) {
    if (str[i] != str[len - i - 1]) {
      return 0;
    }
  }
  return 1;
}

int largest_palindrome(int n) {
  int max_palindrome = 0;
  for (int i = n; i >= 100; i--) {
    for (int j = n; j >= 100; j--) {
      int product = i * j;
      if (is_palindrome(product) && product > max_palindrome) {
        max_palindrome = product;
      }
    }
  }
  return max_palindrome;
}

int main() {
  FILE *fp = fopen("102-result", "w");
  if (fp == NULL) {
    printf("Error opening file\n");
    return 1;
  }

  int max_palindrome = largest_palindrome(999);
  fprintf(fp, "%d", max_palindrome);
  fclose(fp);

  return 0;
}
